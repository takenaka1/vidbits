<div>

  <form class="input-form" action="/videos/{{video._id}}/updates" method="post" />
  <input id="title-input" name="title" value={{video.title}} />
  {{#if error}}
  <span>{{error.message}}</span>
  {{/if}}
  <textarea id="description-input" name="description">{{video.description}}</textarea>
  <input id="url-input" name="url" value={{video.url}} />
  <button class="button submit-button" id="submit-button" type="submit">
  <p>Save a video</p>
  </button>
  </form>

</div>
